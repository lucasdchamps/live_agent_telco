<script type='text/javascript' src='https://c.la1-c2-par.salesforceliveagent.com/content/g/js/39.0/deployment.js'></script>
<script type='text/javascript'>
liveagent.init('https://d.la1-c2-par.salesforceliveagent.com/chat', '5720Y0000008U0b', '00D0Y000001jsoh');
chatOpened = false;

function startChat() {
  var div = document.getElementById('myiframe');
  div.style.display = (div.style.display === "none") ? "block" : "none";

  if (chatOpened) {
    return;
  }

  liveagent.startChatWithWindow('5730Y0000008SbZ', 'myiframe');
  chatOpened = true;
}
</script>

<style>
#myiframe {
  height: 400px;
  position: fixed;
  right: 30px;
  bottom: 95px;
  z-index: 1;
  background-color: white;
}

#liveagent_button_online_5730Y0000008SbZ {
  position: fixed;
  right: 30px;
  bottom: 40px;
}

@media screen and (max-width: 992px) {
  html {
    background: url('bouygues-tablette.png') no-repeat center center fixed;
    webkit-background-size: cover;
    moz-background-size: cover;
    o-background-size: cover;
    background-size: cover;
  }
}

@media screen and (min-width: 993px) {
  html {
    background: url('bouygues-desktop.png') no-repeat center center fixed;
    webkit-background-size: cover;
    moz-background-size: cover;
    o-background-size: cover;
    background-size: cover;
  }
}
</style>

<iframe id='myiframe' name="myiframe" style="display: none;">
</iframe>

<a id="liveagent_button_online_5730Y0000008SbZ" href="javascript://Chat" style="display: none;" onclick="startChat()">
  <%= image_tag "salesforce.png" %>
</a>
<div id="liveagent_button_offline_5730Y0000008SbZ" style="display: none;"><!-- Offline Chat Content --></div>

<script type="text/javascript">
  if (!window._laq) { window._laq = []; }
  window._laq.push(function() {
    liveagent.showWhenOnline('5730Y0000008SbZ', document.getElementById('liveagent_button_online_5730Y0000008SbZ'));
    liveagent.showWhenOffline('5730Y0000008SbZ', document.getElementById('liveagent_button_offline_5730Y0000008SbZ'));
  });
</script>
